@model RDMG.Models.Dungeon.DungeonListViewModel

@{
    ViewData["Title"] = Resources.Dungeon.Title;
}

<div class="row">
    <div class="col-md-12">
        <a asp-action="Create" class="btn btn-sm btn-success"> @Resources.Dungeon.CreateTitle </a>
    </div>
    <div class="col-md-8">
        <table class="table table-striped">
            <thead class="thead-light">
                <tr>
                    <th>@Resources.Dungeon.Name</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var dungeonOption in Model.List.OrderBy(dovm => dovm.DungeonName))
                {
                    <tr>
                        <td>
                            @dungeonOption.DungeonName
                        </td>
                        <td class="text-end">
                            <form method="post" asp-action="DeleteOption" asp-controller="Dungeon" asp-route-id="@dungeonOption.Id" class="list-inline-item">
                                <button id="deleteOptnBtn" title="@Resources.Common.Delete" class="btn btn-sm btn-danger"><i class="fas fa-minus-circle"></i></button>
                            </form>
                            <a asp-action="Create" asp-route-optionId="@dungeonOption.Id" title="@Resources.Dungeon.AddDungeon" class="btn btn-sm btn-success"> <i class="fas fa-plus"></i>  </a>
                            <a asp-action="Load" asp-route-name="@dungeonOption.DungeonName" title=" @Resources.Dungeon.ShowDungeons" class="btn btn-sm btn-primary"> <i class="fas fa-list"></i> </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <div class="col-md-4">
        <table class="table table-striped">
            <thead class="thead-light">
                <tr>
                    <th>@Resources.Dungeon.SubDungeons</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var dungeonOption in Model.List.OrderBy(dovm => dovm.DungeonName))
                {
                    @foreach (var dungeon in dungeonOption.Dungeons.OrderBy(dvm => dvm.Level))
                    {
                        <tr>
                            <td>
                                @dungeonOption.DungeonName - @Resources.Dungeon.Level - @dungeon.Level
                            </td>
                            <td class="text-end">
                                <form method="post" asp-action="Delete" asp-controller="Dungeon" asp-route-id="@dungeon.Id" class="list-inline-item">
                                    <button id="deleteBtn" title="@Resources.Common.Delete" class="btn btn-sm btn-danger"><i class="fas fa-minus-circle"></i></button>
                                </form>
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
</div>

@section Scripts {
<partial name="_ValidationScriptsPartial" />
<script>
    var confirm = function (msg, form, confirmLabel, cancelLabel) {
        bootbox.confirm({
            message: msg,
            buttons: {
                confirm: {
                    label: confirmLabel,
                    className: 'btn-success'
                },
                cancel: {
                    label: cancelLabel,
                    className: 'btn-danger'
                }
            },
            callback: function (result) {
                if (result === true) {
                    form.submit();
                }
            }
        });
    };

    $(document).ready(function () {

        $(document).on('click', '#deleteOptnBtn', function (e) {
            e.preventDefault();
            confirm('@Resources.Common.Alert', this.closest("form"), '@Resources.Common.Yes', '@Resources.Common.Cancel');
        });

        $(document).on('click', '#deleteBtn', function (e) {
            e.preventDefault();
            confirm('@Resources.Common.Alert', this.closest("form"), '@Resources.Common.Yes', '@Resources.Common.Cancel');
        });
    });
</script>
}