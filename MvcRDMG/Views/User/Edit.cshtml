@model MvcRDMG.Models.User.UserEditViewModel

<div class="col-md-12">
    <form asp-action="Edit" asp-controller="User" method="post">
        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
        <input asp-for="Id" type="hidden" />
        <input asp-for="Timestamp" type="hidden" />
        <div class="form-group row">
            <label asp-for="Username" class="col-md-3 col-form-label"></label>
            <div class="col-md-4">
                <input asp-for="Username" class="form-control" tabindex="1" />
                <span asp-validation-for="Username" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="Password" class="col-md-3 col-form-label"></label>
            <div class="col-md-4">
                <input asp-for="Password" class="form-control" tabindex="2" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
        </div>
        <div>
            <button type="submit" class="btn btn-primary" tabindex="3">
                @if ((string)ViewData["Title"] == Resources.User.CreateTitle)
                {
                    @Resources.Common.Create
                }
                else
                {
                    @Resources.Common.Save
                }
            </button>
        </div>
    </form>
</div>

